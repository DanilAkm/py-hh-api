server {
    listen 80;
    server_name boyceing.ru;  # Replace with your actual domain or IP

    root /home/boyceing/py-hh-api/static;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    location /checkmail {
        proxy_pass http://127.0.0.1:5000;  # Adjust if your backend runs elsewhere
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    error_page 404 /index.html;
}